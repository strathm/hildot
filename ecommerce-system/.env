# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development  # Set to 'production' when deploying to production
FLASK_SECRET_KEY=your_secret_key_here

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///site.db  # Local SQLite database (change for production)
SQLALCHEMY_TRACK_MODIFICATIONS=False  # Disable modification tracking (for performance)

# Email Configuration (for sending emails like password reset, etc.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# File Upload Configuration (for storing product images)
UPLOAD_FOLDER=app/static/images/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Other Settings
DEBUG=True  # Set to False in production
